{% extends 'ApplicationPortfolioBundle::layout.html.twig' %}

{% block body %}
	<div class="gallery-container">

		<div class="big-image-container">
			<a class="fancybox" href='#photo-edit'><i class="icon-pencil"></i></a>
			<img class="big-image show" src="http://www.shtern.ru/storage/photos/21/0_ekatirina-stern-d913ba37d4d1b2b1c115a625a41d854e.jpg" style="width:100%"/>
			{% for img in images  %}
				<img id="photo_{{ img.id }}" class="big-image" src="/images/705x470/{{ img.url }}" style="width:100%;display:none;"/>
			{% endfor %}
			
		</div>

	</div>
	<div id="photo-edit">
		<ul id="sortable">
			{% for img in images  %}
				<li id="photo_{{ img.id }}" class="ui-state-default"><img class="big-image" src="/images/72x72/{{ img.url }}" /></li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}