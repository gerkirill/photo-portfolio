<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Сайт фотографа{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/applicationportfolio/css/style.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/applicationportfolio/css/menu.css') }}" />
	
	<script type="text/javascript" src="{{ asset('//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/applicationportfolio/js/gallery.js') }}"></script>
</head>
<body>
    <div class="wrapper">
        <div class="column">
            <div class="header">

            </div>

            {% render url('menu') %}
            <div class="gallery-container">
                {% render url('slider', {'gallery' : slider_url }) %}

                <div class="big-image-container">
                    <img class="big-image" src="/images/705x470/{{ image.url }}" style="width:100%"/>
                </div>

            </div>

            <div style="clear:both"></div>
        </div> <!-- column -->
    </div> <!-- wrapper -->
</body>
</html>